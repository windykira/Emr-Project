<!DOCTYPE html>
<html>
<meta charset="utf-8">
<head>

</head><link rel="stylesheet" href="/css/bootstrap.css">
<link rel="stylesheet" href="/css/font-awesome.css">
<link rel="stylesheet" href="/css/plugins/bootstrap-table/bootstrap-table.min.css">
<link rel="stylesheet" href="/css/styles.css">
<body class="gray-bg">
	<div class="wrapper wrapper-content animated fadeInRight">
		<div class="row">
			<div class="col-sm-12">
				<div class="ibox-content">
					<form class="form-horizontal m-t" id="signupForm">
						<input id="ID" name="emrUser.ID" th:value="${emrUser.ID}" type="hidden">
						<input id="orgId" name="emrUser.userOrganization" th:value="${emrUser.userOrganization}" type="hidden">
						<div class="form-group">
							<label class="col-sm-3 control-label">姓名：</label>
							<div class="col-sm-8">
								<input id="userName" name="emrUser.userName" class="form-control" type="text"
									th:value="${emrUser.userName}">
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-3 control-label">用户名：</label>
							<div class="col-sm-8">
								<input id="account" name="emrUser.account" class="form-control"
									type="text" th:value="${emrUser.account}" readonly>
							</div>
						</div>
						<div class="form-group">
								<label class="col-sm-3 control-label">科室：</label>
								<div class="col-sm-8">
									<input id="departmentIds" name="departmentIds" type="hidden">
									<input id="deptName" name="deptName" class="form-control" type="text" style="cursor: pointer;"
										onclick="openDept()" readonly="readonly" placeholder="所属科室" th:value="${departmentNames}">
								</div>
							</div>
						<div class="form-group">
							<label class="col-sm-3 control-label">E-mail：</label>
							<div class="col-sm-8">
								<input id="email" name="emrUser.email" class="form-control" type="email"
									th:value="${emrUser.email}">
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-3 control-label">状态:</label>
							<div class="col-sm-8">
								<label class="radio-inline"> <input
									th:field="*{emrUser.status}" type="radio" name="emrUser.status" value="1" />
									正常
								</label> <label class="radio-inline"> <input
									th:field="*{emrUser.status}" type="radio" name="emrUser.status" value="0" />
									禁用
								</label>
							</div>
						</div>
						<input type="hidden" name="roleIds" id="roleIds" th:value="${roleIds}">
						<div class="form-group">
							<label class="col-sm-3 control-label">角色</label>
							<div class="col-sm-8">
								<label th:each="role:${roles}" class="checkbox-inline">
									<input name="role" type="checkbox" th:value="${role.emrRoleEntity.ID}"
									th:text="${role.emrRoleEntity.roleName}" th:checked="${role.related}">
								</label>
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-8 col-sm-offset-3">
								<button type="submit" class="btn btn-primary">提交</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	<div th:include="emrinclude::footer"></div>
	<script type="text/javascript" src="/js/appjs/emrsys/user/edit.js">
	</script>
</body>
</html>
