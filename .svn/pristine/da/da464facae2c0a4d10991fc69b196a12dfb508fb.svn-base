    <select id="listUserPermissions" resultType="string">
        select distinct m.MENU_PERMISSION
        from SYS_MENU m left join
          SYS_ROLE_MENU rm on m.PK_MENU = rm.PK_MENU
        left join SYS_USER_ROLE ur
        on rm.PK_ROLE = ur.PK_ROLE where ur.PK_USER
          = #{userID}
    </select>

    <select id="listUserRoles" resultType="string">
        select CODE_ROLE from SYS_ROLE r left join SYS_USER_ROLE ur on ur.PK_ROLE = r.PK_ROLE where UR.PK_USER = #{userID}
    </select>

    <select id="getSubMenuByName" resultType="Map" parameterType="String">
       select * from SYS_MENU where PK_FATHER = (Select PK_MENU from SYS_MENU where NAME_MENU=#{name})
    </select>
    
    
</mapper>