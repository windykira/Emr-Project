<script type="text/javascript">

    var departmentData = "";
    $(document).ready(function () {

        upgradeIEEdition();

        $("#login").on('click', function () {
            $("#signupForm").submit();
        });
        validateRule();
    });

    $.validator.setDefaults({
        submitHandler: function () {
            login();
        }
    });

    //IE浏览器版本低于9.0默认升级
    function upgradeIEEdition() {

        var defaultVersion = 9.0;
        var ua = navigator.userAgent.toLowerCase();
        var isIE = ua.indexOf("msie")>-1;
        var safariVersion;
        if(isIE){
            safariVersion =  ua.match(/msie ([\d.]+)/)[1];
            if(safariVersion < defaultVersion ){
                var activeXObject = new ActiveXObject("wscript.shell");
                activeXObject.run("D://dc//EIE11_ZH-CN_WOL_WIN764.EXE");
            };
        }
    }

    function login() {

        $.ajax({
            type: "POST",
            url: "/emrsys/user/checkForDepartment",
            data: $('#signupForm').serialize(),
            success: function (data) {
                if (data.code == 1) {
                    if (data.userDepartments > 1) {
                        departmentData = data.departmentsData;
                        layer.open({
                            type: 2,
                            closeBtn: 0,
                            title: '选择科室',
                            maxmin: true,
                            shadeClose: false, // 点击遮罩关闭层
                            area: ['800px', '400px'],
                            content: ['emrsys/dept/choose', 'no']
                        })
                    } else {
                        $("#departmentId").val(data.departmentsData[0].id);
                        $.ajax({
                            type: "POST",
                            url: ctx + "login",
                            data: $('#signupForm').serialize(),
                            success: function (r) {
                                if (r.code == 1) {
                                    var index = layer.load(1, {
                                        shade: [0.1, '#fff'] //0.1透明度的白色背景
                                    });
                                    parent.location.href = '/index';
                                } else {
                                    layer.msg(r.msg);
                                }
                            },
                        })
                    }
                } else {
                    layer.msg(data.msg);
                }
            }
        });

        /*$.ajax({
         type: "POST",
         url: ctx+"login",
         data: $('#signupForm').serialize(),
         success: function (r) {
         if (r.code == 1) {
         var index = layer.load(1, {
         shade: [0.1,'#fff'] //0.1透明度的白色背景
         });
         parent.location.href = '/index';
         } else {
         layer.msg(r.msg);
         }
         },
         });*/
    }

    function validateRule() {
        var icon = "<i class='fa fa-times-circle'></i> ";
        $(".clearfix").validate({
            rules: {
                username: {
                    required: true
                },
                password: {
                    required: true
                }
            },
            messages: {
                username: {
                    required: icon + "请输入您的用户名",
                },
                password: {
                    required: icon + "请输入您的密码",
                }
            }
        })
    }
</script>
</body>
</html>